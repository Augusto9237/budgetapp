// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Enterprise {
  id           Int      @id @default(autoincrement())
  cnpj         String   @unique
  businessName String
  tradeName    String
  owner        String
  contact      String
  email        String   @unique
  logoUrl      String
  street       String
  number       String
  neighborhood String
  city         String
  state        String
  zipCode      String
  budgets      Budget[]
}

model Customer {
  id           Int      @id @default(autoincrement())
  cnpj         String   @unique
  businessName String
  tradeName    String
  buyer        String
  contact      String
  email        String   @unique
  street       String
  number       String
  neighborhood String
  city         String
  state        String
  zipCode      String
  budgets      Budget[]
}

model Product {
  id          Int     @id @default(autoincrement())
  code        String  @unique
  name        String
  reference   String
  brand       String
  description String
  basePrice   Float
  items       Item[]
}


model Budget {
  id           Int        @id @default(autoincrement())
  enterpriseId Int
  customerId   Int?
  enterprise   Enterprise @relation(fields: [enterpriseId], references: [id])
  customer     Customer?  @relation(fields: [customerId], references: [id])
  status       String
  items        Item[]
}

model Item {
  id        Int     @id @default(autoincrement())
  budgetId  Int
  budget    Budget  @relation(fields: [budgetId], references: [id])
  productId Int
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
}
